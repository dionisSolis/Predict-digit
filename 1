using System;
namespace PredictDigit
{
    class Program
    {
        static void Main(string[] args)
        {
            Random random = new Random();
            int digitToPredict = random.Next(1, 11);
            int count;
            int userTry;

            Console.WriteLine("Добро пожаловать в игру 'Угадай цифру от 1 до 10'! У Вас есть 5 попыток.!");

            for (count = 0; count < 5; count++)
            {
                Console.WriteLine($"\n{count + 1} попытка. Как Вам кажется, какую цифру загадал компьютер?");
                userTry = int.Parse(Console.ReadLine());

                if (userTry == digitToPredict)
                {
                    Console.WriteLine($"Поздравляю, Вы угадали число с {count + 1}ой попытки");
                    break;
                }
                else
                {
                    Console.WriteLine("К сожалению, Вы не угадали");

                    if (userTry > digitToPredict)
                    {
                        Console.WriteLine("Загаданное число меньше, чем Ваше");
                    }
                    else
                    {
                        Console.WriteLine("Загаданное число больше, чем Ваше");
                    }

                    if (count == 4)
                    {
                        Console.WriteLine($"\nИскомое число: {digitToPredict}");
                    }
                }
            }

            Console.WriteLine("\nДо свидания!");
            Console.Read();
        }
    }
}
